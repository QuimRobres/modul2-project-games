<div class="game-page">
    <img src='{{this.image_url}}' alt='game-image'>

    <div>
        <form action='/private/gameDetail/own' method="POST">
            <input type="text" name="id" value={{this._id}} style="display: none;">
            <button class="own" type='submit'>Add game to collection</button>
            <button class="wish" type='submit' formaction='/private/gameDetail/wish'>Add game to wishlist</button>
        </form>
    </div>

    <div>
        <h5>{{this.name}}</h5>
        <p>{{this.description}}</p>
        <p>Players: {{this.min_players}} - {{this.max_players}}</p>
        <p>Playtime: {{this.min_playtime}} - {{this.max_playtime}} mins</p>
        <p>Rating: {{this.average_user_rating}}</p>
        <p>Price: {{this.price}}$</p>
    </div>
    <div>
        <p>Publication year:{{this.year_published}}</p>
        <p>Minimum age:{{this.min_age}}</p>
    </div>
</div>